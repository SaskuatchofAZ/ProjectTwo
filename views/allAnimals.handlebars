{{> navbar user}}
<div class="container">
    <div class="row">
        <div class="col-md">
            <div class="jumbotron">
                <h1 class="display-6">All Animals</h1>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Picture</th>
                        <th scope="col">Species</th>
                        <th scope="col">Age</th>
                        <th scope="col">Weight</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each animal}}
                    <tr class="table-active">
                        <th scope="row">{{name}}</th>
                        <td>{{picture}}</td>
                        <td>{{species}}</td>
                        <td>{{age}} years old</td>
                        <td>{{weight}} lbs.</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>