{{> navbar user }}
<div class="container">
    <div class="jumbotron"
        style="background-image: url(http://s3.serverdata.com/www.garysdoggrooming.com/files/sub-headers/faq-windows-header.jpg);">

        <h1 class="jumbotronTitle">{{animal.name}}</h1>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col" id="animalImgCol">
            <img src="https://scontent-lax3-1.xx.fbcdn.net/v/t1.0-9/94104115_10157475976219615_729495238833340416_n.jpg?_nc_cat=108&_nc_sid=110474&_nc_ohc=3CV7yx-feJwAX-obPv0&_nc_ht=scontent-lax3-1.xx&oh=48edf501e6d5a6f67e4ac313ff751156&oe=5EE477C3"
                id="animalImage">
        </div>
        <div class="col">
            <div class="informationBox mb-3">
                <div class="card-header">Other Information</div>
                <div class="card-body">
                    <p class="card-text" id="date"></p>Date into shelter: {{date}}</p>
                    <p class="card-text">{{animal.age}} years old</p>
                    <p class="card-text">{{animal.weight}} lbs</p>
                    <p class="card-text">{{animal.name}}'s bio: {{animal.bio}}</p>
                    {{!-- add other information --}}
                </div>
            </div>
        </div>
    </div>
</div>





