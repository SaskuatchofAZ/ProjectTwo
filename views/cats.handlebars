{{> navbar user }}
<div class="container">
    <div class="row">
        <div class="col-md">
            <div class="jumbotron">
                <h1 class="display-6">Cats</h1>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Picture</th>
                            <th scope="col">Name</th>
                            <th scope="col">Breed</th>
                            <th scope="col">Age</th>
                            <th scope="col">Weight</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each animal}}
                        <tr class="table">
                            <td>
                                <div class="card" style="width: 18rem;">
                                    <a href="{{picture}}" class="w-25"></a>
                                    <img src="https://tse4.mm.bing.net/th?id=OIP.IadWjX7Z2rp2w7Td5k-LAwHaFA&pid=Api&P=0&w=268&h=182"
                                        class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <p class="card-text">{{bio}}</p>
                                    </div>
                                </div>
                            </td>
                            <td>{{name}}</td>
                            <td>{{breed}}</td>
                            <td>{{age}} years old</td>
                            <td>{{weight}} lbs.</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>